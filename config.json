{
  "audio": {
    "sample_rate": 16000,
    "channels": 1,
    "chunk_size": 1024,
    "format": "paInt16",
    "silence_threshold": 30.0,
    "silence_duration": 0.8,
    "max_recording_time": 4.0
  },
  "stt": {
    "default_engine": "whisper",
    "whisper": {
      "default_model": "tiny.en"
    },
    "vosk": {
      "default_model": "vosk-model-small-en-us-0.15"
    }
  },
  "wake_words": [
    "jarvis",
    "hey jarvis"
  ],
  "debug": {
    "audio_processing": false,
    "rms_logging_interval": 500
  }
}